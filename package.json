{
  "name": "echo-text",
  "version": "0.1.0",
  "description": "A lightweight javascript/typescript library that creates typewriter effects by typing characters one by one, line by line",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "unpkg": "dist/echo-text.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && rollup -c",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "biome format --write src/",
    "lint": "biome lint src/",
    "check": "biome check src/",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": ["typing", "effect", "animation", "text", "streaming", "character", "sequential"],
  "author": "4anghyeon",
  "license": "MIT",
  "files": ["dist", "README.md", "LICENSE"],
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.14.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^12.1.2",
    "rollup": "^4.39.0",
    "tslib": "^2.8.1"
  }
}
